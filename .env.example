# OpenRouter API (LLMs Gratuitos)
OPENROUTER_API_KEY=sk-or-v1-xxxx

# Modelo padrão (gratuitos recomendados)
# - meta-llama/llama-3.3-70b-instruct:free (melhor qualidade)
# - deepseek/deepseek-r1:free (reasoning)
# - meta-llama/llama-3.1-8b-instruct:free (mais rápido)
LLM_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Configurações de Follow-up (em horas)
FOLLOWUP_1_DELAY=4
FOLLOWUP_2_DELAY=24
FOLLOWUP_3_DELAY=48
FOLLOWUP_4_DELAY=72
FOLLOWUP_5_DELAY=120
MAX_FOLLOWUPS=5

# Horários comerciais (evita enviar fora)
BUSINESS_HOURS_START=8
BUSINESS_HOURS_END=21

# Debug
DEBUG=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_EXPIRES_IN=7d

# CRM API Configuration
CRM_API_PORT=3001
CRM_CORS_ORIGIN=*
